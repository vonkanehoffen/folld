<div class="link tiles_item" id="link_<%= link.id %>">
	<div class="show">
		<h4 class="title"><%= link_to link.title, link.uri, :rel => 'nofollow' %></h4>
		<div class="description"><%= link.description %></div>
		<div class="meta">
			<div class="user"><div class="icon-small user-grey"><span>By: </span></div><%= link_to link.user.username, user_links_path(link.user.username) rescue "No user" %></div>
		    <div class="tags"><div class="icon-small tags-grey inline"><span>Tags: </span></div><%= raw link.tag_list.map { |t| link_to t, tag_path(t) }.join(' ') %></div>
		    <% if(link.user == current_user) %>
		    	<div class="actions">
			    	<%= link_to '', edit_link_path(link), :class => 'icon-small edit-grey', :title => 'Edit', :remote => true %>
			    	<%= link_to '', link, :class => 'icon-small close-grey', :title => 'Remove', method: :delete, data: { confirm: 'Are you sure?' }, :remote => true %>
			    </div>
			<% end %>
		</div>
	</div>
</div>